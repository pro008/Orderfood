<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tvdatmon"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt Món"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#ff0000"
        android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:background="#ff0000"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:indeterminate="false" />
    <TextView
        android:id="@+id/txttendm"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Tenmon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imagedatmon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cari_ga_khmer" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtgiadm"
                    android:textSize="20dp"
                    android:textColor="#ff0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gia" />

                <EditText
                    android:id="@+id/etsoluongdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#f90101"
                    android:src="@drawable/textfield_bg"
                    android:hint="Nhập số lượng"
                    android:inputType="number" />
            </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/etghichudm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:src="@drawable/textfield_bg"
        android:inputType="textPersonName"
        android:hint="Ghi Chú" />
    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/btnDatMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0202"
        android:text="Đặt Món"
        android:textColor="#fff"
        android:textStyle="bold"/>

</LinearLayout>
</LinearLayout>